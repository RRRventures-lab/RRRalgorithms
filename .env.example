# =============================================================================
# RRRalgorithms Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your API keys and settings

# =============================================================================
# Environment
# =============================================================================
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_TYPE=sqlite
DATABASE_PATH=data/db/trading.db
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
DATABASE_TIMEOUT=30

# =============================================================================
# API Keys - REQUIRED for live data
# =============================================================================
# Polygon.io - Real-time crypto market data
# Get your key at: https://polygon.io/
POLYGON_API_KEY=your_polygon_api_key_here

# Perplexity AI - Market sentiment analysis (optional)
# Get your key at: https://www.perplexity.ai/
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Anthropic - AI features (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Coinbase - Live trading (optional, only for live trading)
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here

# TradingView - Webhook alerts (optional)
TRADINGVIEW_WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# Trading Configuration
# =============================================================================
PAPER_TRADING=true
LIVE_TRADING=false
INITIAL_CAPITAL=100000.0

# =============================================================================
# Risk Management
# =============================================================================
MAX_POSITION_SIZE_PCT=0.20
MAX_DAILY_LOSS_PCT=0.05
MAX_PORTFOLIO_VOLATILITY=0.25
MAX_DRAWDOWN_PCT=0.10

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_AI_VALIDATION=true
ENABLE_SENTIMENT_ANALYSIS=false
ENABLE_QUANTUM_OPTIMIZATION=false

# =============================================================================
# Redis Configuration (optional - for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# =============================================================================
# Service Ports
# =============================================================================
NEURAL_NETWORK_PORT=8000
DATA_PIPELINE_PORT=8001
TRADING_ENGINE_PORT=8002
RISK_MANAGEMENT_PORT=8003
BACKTESTING_PORT=8004
API_INTEGRATION_PORT=8005
QUANTUM_OPTIMIZATION_PORT=8006
MONITORING_PORT=8501

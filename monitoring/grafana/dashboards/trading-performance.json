{
  "dashboard": {
    "id": null,
    "uid": "rrr-trading-performance",
    "title": "RRR Trading - Trading Performance",
    "tags": ["rrr-trading", "trading", "performance"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
        "type": "stat",
        "title": "Current PnL (24h)",
        "targets": [
          {
            "expr": "trading_daily_pnl",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": -10000, "color": "dark-red"},
                {"value": -1000, "color": "red"},
                {"value": 0, "color": "yellow"},
                {"value": 1000, "color": "green"},
                {"value": 10000, "color": "dark-green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
        "type": "stat",
        "title": "Win Rate (24h)",
        "targets": [
          {
            "expr": "trading_win_rate",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "textMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.4, "color": "orange"},
                {"value": 0.5, "color": "yellow"},
                {"value": 0.6, "color": "green"},
                {"value": 0.7, "color": "dark-green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
        "type": "stat",
        "title": "Sharpe Ratio",
        "targets": [
          {
            "expr": "trading_sharpe_ratio",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "textMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "yellow"},
                {"value": 2, "color": "green"},
                {"value": 3, "color": "dark-green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0},
        "type": "stat",
        "title": "Total Trades (24h)",
        "targets": [
          {
            "expr": "increase(trading_orders_total[24h])",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "textMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 6},
        "type": "graph",
        "title": "Cumulative PnL",
        "targets": [
          {
            "expr": "trading_cumulative_pnl",
            "legendFormat": "Cumulative PnL",
            "refId": "A"
          },
          {
            "expr": "trading_daily_loss_limit",
            "legendFormat": "Daily Loss Limit",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "currencyUSD", "label": "PnL ($)"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 2,
        "linewidth": 2,
        "legend": {"show": true, "alignAsTable": true, "rightSide": false},
        "seriesOverrides": [
          {
            "alias": "Daily Loss Limit",
            "color": "red",
            "fill": 0,
            "linewidth": 2,
            "dashes": true
          }
        ]
      },
      {
        "id": 6,
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 6},
        "type": "graph",
        "title": "Order Execution Latency",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(trading_order_execution_duration_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(trading_order_execution_duration_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(trading_order_execution_duration_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency (seconds)", "min": 0},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {"show": true, "alignAsTable": true}
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "type": "graph",
        "title": "Active Positions by Symbol",
        "targets": [
          {
            "expr": "trading_active_positions",
            "legendFormat": "{{symbol}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Position Count"},
          {"format": "short"}
        ],
        "bars": true,
        "lines": false,
        "legend": {"show": true, "alignAsTable": true, "rightSide": true}
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "type": "graph",
        "title": "Order Success vs Failure Rate",
        "targets": [
          {
            "expr": "rate(trading_orders_total{status=\"filled\"}[5m])",
            "legendFormat": "Successful Orders",
            "refId": "A"
          },
          {
            "expr": "rate(trading_order_failures_total[5m])",
            "legendFormat": "Failed Orders",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Orders/sec"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 2,
        "linewidth": 2,
        "seriesOverrides": [
          {
            "alias": "Successful Orders",
            "color": "green"
          },
          {
            "alias": "Failed Orders",
            "color": "red"
          }
        ]
      },
      {
        "id": 9,
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 24},
        "type": "piechart",
        "title": "Order Types Distribution",
        "targets": [
          {
            "expr": "sum by(order_type) (trading_orders_total)",
            "legendFormat": "{{order_type}}",
            "refId": "A"
          }
        ],
        "options": {
          "pieType": "donut",
          "displayLabels": ["name", "percent"]
        }
      },
      {
        "id": 10,
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 24},
        "type": "graph",
        "title": "Average Trade Size",
        "targets": [
          {
            "expr": "avg_over_time(trading_order_value_usd[10m])",
            "legendFormat": "Avg Trade Size",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "currencyUSD", "label": "Trade Size ($)"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 2,
        "linewidth": 2
      },
      {
        "id": 11,
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 24},
        "type": "graph",
        "title": "Slippage Analysis",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(trading_slippage_bps_bucket[10m]))",
            "legendFormat": "p95 Slippage",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "none", "label": "Slippage (bps)", "min": 0},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "alert": {
          "name": "High Slippage Alert",
          "conditions": [
            {
              "evaluator": {"type": "gt", "params": [50]},
              "query": {"params": ["A", "10m", "now"]},
              "type": "query"
            }
          ]
        }
      },
      {
        "id": 12,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32},
        "type": "table",
        "title": "Recent Trades",
        "targets": [
          {
            "expr": "trading_recent_trades",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "includeByName": {
                "symbol": true,
                "side": true,
                "quantity": true,
                "price": true,
                "pnl": true,
                "timestamp": true
              }
            }
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [{"displayName": "timestamp", "desc": true}]
        }
      }
    ],
    "time": {"from": "now-24h", "to": "now"},
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"]
    }
  }
}

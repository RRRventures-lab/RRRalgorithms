{
  "dashboard": {
    "id": null,
    "uid": "trading-overview",
    "title": "RRRalgorithms Trading Overview",
    "tags": ["trading", "overview"],
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "type": "stat",
        "title": "Portfolio Value",
        "targets": [
          {
            "expr": "trading_portfolio_value",
            "legendFormat": "Value"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 90000},
                {"color": "green", "value": 100000}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
        "type": "stat",
        "title": "Total P&L",
        "targets": [
          {
            "expr": "trading_pnl_total",
            "legendFormat": "P&L"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": -1000},
                {"color": "yellow", "value": 0},
                {"color": "green", "value": 1000}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
        "type": "stat",
        "title": "Current Drawdown",
        "targets": [
          {
            "expr": "trading_portfolio_drawdown * 100",
            "legendFormat": "Drawdown"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
        "type": "stat",
        "title": "System Status",
        "targets": [
          {
            "expr": "trading_system_status",
            "legendFormat": "Status"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "textMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "value": 0,
                "text": "Healthy",
                "color": "green"
              },
              {
                "type": "value",
                "value": 1,
                "text": "Degraded",
                "color": "yellow"
              },
              {
                "type": "value",
                "value": 2,
                "text": "Critical",
                "color": "red"
              }
            ]
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "type": "graph",
        "title": "Portfolio Value Over Time",
        "targets": [
          {
            "expr": "trading_portfolio_value",
            "legendFormat": "Portfolio Value"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 0
          }
        },
        "options": {
          "tooltip": {
            "mode": "single"
          }
        },
        "yaxes": [
          {
            "format": "currencyUSD",
            "show": true
          }
        ]
      },
      {
        "id": 6,
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "type": "graph",
        "title": "P&L Breakdown",
        "targets": [
          {
            "expr": "trading_pnl_total",
            "legendFormat": "Realized P&L"
          },
          {
            "expr": "sum(trading_pnl_unrealized)",
            "legendFormat": "Unrealized P&L"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2
          }
        },
        "yaxes": [
          {
            "format": "currencyUSD",
            "show": true
          }
        ]
      },
      {
        "id": 7,
        "gridPos": {"x": 0, "y": 12, "w": 8, "h": 6},
        "type": "table",
        "title": "Active Positions",
        "targets": [
          {
            "expr": "trading_position_size",
            "format": "table",
            "instant": true
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": true,
              "displayName": "Value"
            }
          ]
        },
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "symbol"},
              "properties": [
                {"id": "displayName", "value": "Symbol"}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Value"},
              "properties": [
                {"id": "unit", "value": "currencyUSD"},
                {"id": "decimals", "value": 2}
              ]
            }
          ]
        }
      },
      {
        "id": 8,
        "gridPos": {"x": 8, "y": 12, "w": 8, "h": 6},
        "type": "bargauge",
        "title": "Order Latency Distribution",
        "targets": [
          {
            "expr": "histogram_quantile(0.5, sum(rate(trading_order_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(trading_order_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(trading_order_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "p99"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 3,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.05},
                {"color": "red", "value": 0.1}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "gridPos": {"x": 16, "y": 12, "w": 8, "h": 6},
        "type": "gauge",
        "title": "Model Accuracy",
        "targets": [
          {
            "expr": "avg(trading_model_accuracy)",
            "legendFormat": "Average Accuracy"
          }
        ],
        "options": {
          "orientation": "auto",
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "decimals": 2,
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 0.6},
                {"color": "green", "value": 0.8}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "gridPos": {"x": 0, "y": 18, "w": 12, "h": 6},
        "type": "graph",
        "title": "Market Data Flow",
        "targets": [
          {
            "expr": "sum(rate(trading_market_data_received_total[1m])) by (source)",
            "legendFormat": "{{source}}"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Messages/sec",
            "show": true
          }
        ]
      },
      {
        "id": 11,
        "gridPos": {"x": 12, "y": 18, "w": 12, "h": 6},
        "type": "heatmap",
        "title": "Database Query Performance",
        "targets": [
          {
            "expr": "sum(increase(trading_db_query_duration_seconds_bucket[5m])) by (le, query_type)",
            "format": "heatmap",
            "legendFormat": "{{query_type}}"
          }
        ],
        "options": {
          "calculate": false,
          "yAxis": {
            "axisPlacement": "left",
            "decimals": 3,
            "unit": "s"
          },
          "tooltip": {
            "show": true,
            "showHistogram": false
          }
        }
      }
    ],
    "links": [
      {
        "asDropdown": true,
        "icon": "external link",
        "tags": ["trading"],
        "title": "Trading Dashboards",
        "type": "dashboards"
      }
    ]
  }
}

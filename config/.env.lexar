# RRRalgorithms - Lexar Deployment Environment
# Copy env.lexar.template and customize this file

ENVIRONMENT=lexar
LEXAR_ROOT=/Volumes/Lexar/RRRVentures/RRRalgorithms
PYTHONPATH=/Volumes/Lexar/RRRVentures/RRRalgorithms

# Telegram (Optional - leave empty to skip)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Trading
TRADING_MODE=paper
INITIAL_CAPITAL=10000
NN_MODE=mock
DATA_MODE=mock

# Monitoring
LOG_LEVEL=INFO
ENABLE_TELEGRAM_ALERTS=false
DAILY_SUMMARY_TIME=08:00

# Dashboard
DASHBOARD_PORT=8501
AUTO_REFRESH_SECONDS=5

# Paths
DATABASE_PATH=data/database/local.db
LOG_DIRECTORY=logs

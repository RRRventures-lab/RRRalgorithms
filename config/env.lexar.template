# RRRalgorithms - Lexar Deployment Environment
# ==============================================
# Copy this file to .env.lexar and fill in your values
# cp env.lexar.template .env.lexar
# Then edit .env.lexar with your actual tokens

# Environment
ENVIRONMENT=lexar
LEXAR_ROOT=/Volumes/Lexar/RRRVentures/RRRalgorithms
PYTHONPATH=/Volumes/Lexar/RRRVentures/RRRalgorithms

# Telegram Bot (Optional - for mobile alerts)
# Get from @BotFather and @userinfobot on Telegram
TELEGRAM_BOT_TOKEN=your_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# API Keys (Optional - for live data)
POLYGON_API_KEY=
COINBASE_API_KEY=
COINBASE_API_SECRET=
PERPLEXITY_API_KEY=

# Trading Configuration
TRADING_MODE=paper
INITIAL_CAPITAL=10000
NN_MODE=mock
DATA_MODE=mock

# Monitoring
LOG_LEVEL=INFO
ENABLE_TELEGRAM_ALERTS=true
DAILY_SUMMARY_TIME=08:00

# Dashboard
DASHBOARD_PORT=8501
AUTO_REFRESH_SECONDS=5

# Paths (relative to Lexar)
DATABASE_PATH=data/database/local.db
LOG_DIRECTORY=logs
BACKUP_PATH=/Volumes/2TB-Dock/RRRalgorithms/backups


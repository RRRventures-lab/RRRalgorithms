# Example API Keys Configuration - Copy to .env.production and fill in real values
# NEVER commit actual API keys to version control

# Environment
ENVIRONMENT=production
DEBUG=false

# Polygon.io - Market Data API
POLYGON_API_KEY=your_polygon_api_key_here
POLYGON_BASE_URL=https://api.polygon.io
POLYGON_WS_URL=wss://socket.polygon.io

# Perplexity AI - Sentiment Analysis
PERPLEXITY_API_KEY=your_perplexity_api_key_here
PERPLEXITY_BASE_URL=https://api.perplexity.ai

# Coinbase - Exchange API
COINBASE_ORGANIZATION_ID=your_organization_id_here
COINBASE_API_KEY=your_api_key_here
COINBASE_PRIVATE_KEY_PATH=/path/to/coinbase_private_key.pem
COINBASE_BASE_URL=https://api.coinbase.com

# Qwen AI - Additional AI Capabilities
QWEN_API_KEY=your_qwen_api_key_here
QWEN_BASE_URL=https://dashscope.aliyuncs.com/api/v1

# Trading Configuration
PAPER_TRADING=true
LIVE_TRADING_ENABLED=false
MAX_ORDER_SIZE_USD=100.00
MAX_DAILY_VOLUME_USD=500.00
MAX_POSITION_SIZE_PERCENT=20

# Database
DATABASE_URL=sqlite:///./data/transparency.db
REDIS_URL=redis://localhost:6379/0

# Security
JWT_SECRET_KEY=generate-a-secure-random-key-here
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# API Rate Limits
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_BURST=10

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
LOG_LEVEL=INFO

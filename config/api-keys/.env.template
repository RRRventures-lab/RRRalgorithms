# API Keys Configuration Template
# Copy this file to .env and fill in your actual API keys
# NEVER commit the actual .env file to git!

# Polygon.io API Key (required for market data)
# Get your key at: https://polygon.io/dashboard/api-keys
POLYGON_API_KEY=your_polygon_api_key_here

# TradingView Webhook Secret (for alerts)
TRADINGVIEW_WEBHOOK_SECRET=your_webhook_secret_here

# Perplexity AI API Key (for sentiment analysis)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Telegram Bot Token (for mobile alerts)
# Create a bot with @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Database Configuration
DATABASE_URL=sqlite:///data/local.db
# For PostgreSQL: postgresql://user:password@localhost/dbname

# Environment Settings
ENVIRONMENT=development
PAPER_TRADING=true
LIVE_TRADING=false

# Risk Management Limits
MAX_POSITION_SIZE=1000
MAX_DAILY_LOSS=500
MAX_DRAWDOWN_PCT=10

# Monitoring
ENABLE_MONITORING=true
MONITORING_PORT=8501
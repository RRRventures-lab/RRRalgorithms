{
  "name": "rrralgorithms-ui",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "docker:build": "docker build -t rrralgos-bloomberg-ui .",
    "docker:run": "docker run -p 3000:80 rrralgos-bloomberg-ui",
    "docker:compose": "docker-compose up -d",
    "deploy:build": "npm run build && npm run docker:build",
    "deploy:production": "npm run deploy:build && npm run docker:compose"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.1",
    "@tailwindcss/typography": "^0.5.10",
    "@types/d3": "^7.4.3",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/react-grid-layout": "^1.3.5",
    "@types/react-redux": "^7.1.33",
    "@types/react-window": "^1.8.8",
    "autoprefixer": "^10.4.16",
    "d3": "^7.8.5",
    "framer-motion": "^10.16.16",
    "lightweight-charts": "^4.1.3",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-grid-layout": "^1.4.4",
    "react-redux": "^9.0.4",
    "react-window": "^1.8.8",
    "socket.io-client": "^4.7.2",
    "tailwindcss": "^3.3.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^27.0.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^3.2.4"
  }
}
